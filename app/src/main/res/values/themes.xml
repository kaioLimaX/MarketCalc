<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MarketCalc" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--cores primarias-->
        <item name="colorPrimary">@color/secundaria</item>
        <item name="colorPrimaryVariant">@color/secundaria_variacao</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--cores secundarias-->
        <item name="colorSecondary">@color/primaria</item>
        <item name="colorSecondaryVariant">@color/primaria_variacao</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--Status bar Color-->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="backgroundColor">@color/fundo</item>

    </style>

    <style name="Theme.MarketCalc" parent="Base.Theme.MarketCalc" />
